<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title>Add New Product</title>
  </head>
  <body class="add-product-page">
    <header class="add-product-page__header">
      <h1 class="add-product-page__title">Add New Product</h1>
    </header>
    <% if (errors?.length > 0) { %>
      <ul class="add-product-page__error-list">
        <% errors.forEach(function(error) { %>
        <li class="add-product-page__error-item"><%= error.msg %></li>
        <% }) %>
      </ul>
      <hr class="add-product-page__divider" />
      <% } %>

    
    <main class="add-product-page__main">
      <form action="/products/addProduct<%= product?.id ? '/' + product.id : '' %>" method="POST" class="add-product-form">
        <div class="add-product-form__field">
          <label for="name" class="add-product-form__label">Product Name</label>
          <input
            type="text"
            id="name"
            name="name"
            class="add-product-form__input"
            placeholder="Enter product name"
            value="<%= product ? product.name : '' %>"
          />
        </div>
        <div class="add-product-form__field">
          <label for="price" class="add-product-form__label">Price</label>
          <input
            type="number"
            id="price"
            name="price"
            class="add-product-form__input"
            placeholder="Enter price"
            value="<%= product ? product.price : '' %>"
          />
        </div>
        <div class="add-product-form__field">
          <label for="quantity" class="add-product-form__label">Quantity</label>
          <input
            type="number"
            id="quantity"
            name="quantity"
            class="add-product-form__input"
            placeholder="Enter quantity"
            value="<%= product ? product.quantity : '' %>"
          />
        </div>
        <button type="submit" class="add-product-form__submit">
          Add Product
        </button>
      </form>
      <a href="/products" class="add-product-page__back">Back to List</a>
    </main>
  </body>
</html>
